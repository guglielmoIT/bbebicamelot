<?xml version="1.0" encoding="UTF-8"?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms" xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml" x:Class="FileUploader.WelcomePage" xmlns:local="clr-namespace:FileUploader;" BackgroundColor="{x:Static local:Colors.BackgroundColor}">
	<ContentPage.Content>
		<StackLayout Spacing="35" Padding="0, 60, 0, 0">
			<StackLayout Spacing="30">
				<Image Source="{x:Static local:Images.MomentsIcon}" HeightRequest="162.5" WidthRequest="162.5" />
				<Label Text="{x:Static local:Strings.Moments}" Style="{StaticResource MainLabelStyle}" />
			</StackLayout>
			<StackLayout Spacing="0">
				<!--<Button x:Name="signUpButton" 
					Text="{x:Static local:Strings.SignUp}" />
				<Image BackgroundColor="{x:Static local:Colors.SeparatorColor}"
					HeightRequest="1" />-->
				<Button x:Name="signInButton" Text="{x:Static local:Strings.SignIn}" />
			</StackLayout>
		</StackLayout>
	</ContentPage.Content>
</ContentPage>